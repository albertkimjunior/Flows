{
  "name": "taskpuppy",
  "displayName": "Taskpuppy",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Pawsitive",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.86.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "https-browserify": "^1.0.0",
    "prettier": "3.2.4",
    "stream-http": "^3.1.0",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions":
    [
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.png",
          "*.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
